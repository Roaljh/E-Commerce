<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body text-center">
                    <h1 class="text-danger">Error</h1>
                    <p class="lead">{{message}}</p>
                    {{#if error}}
                        <pre class="bg-light p-3">{{error}}</pre>
                    {{/if}}
                    <a href="/" class="btn btn-primary">Return Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
